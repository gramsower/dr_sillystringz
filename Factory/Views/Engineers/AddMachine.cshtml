@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Assign a Machine</h2>

<h4>Assign a Machine to this Engineer: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select machine")
    @Html.DropDownList("MachineId")
    
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Engineer list", "Index")</p>